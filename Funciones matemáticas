package com.mycompany.funnjava;

import java.util.Scanner;
import javax.swing.JOptionPane;

public class Funnjava {

    public static void main(String[] args) {
        
        char caracter= JOptionPane.showInputDialog("Mete un caracter").charAt(0);
        JOptionPane.showMessageDialog(null,"Este es tu caracter "+caracter);

        Scanner entra=new Scanner(System.in);
        float num1,num2,suma,resta,mul,div;
        System.out.println("Introduce 2 numeros:");
        num1=entra.nextFloat();
        num2=entra.nextFloat();
        suma=num1+num2;
        resta=num1-num2;
        mul=num1*num2;
        div=num1/num2;
        System.out.println("Suma="+suma);
        System.out.println("Resta="+resta);
        System.out.println("Multiplicacion="+mul);
        System.out.println("Divicion="+div);
    }
}
